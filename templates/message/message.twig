{% extends "base.twig" %}

{% block header %}{% endblock %}

{% block footer %}{% endblock %}

{% block content %}
  <div class="container py-5">

    <div class="message">

      <div class="message-container">

        <h1 class="h2 mb-4 message-title">
          {{ title }}<br>
          <span class="message-subtitle">
            {{ subtitle }}
          </span>
        </h1>

        <div>
          {{ text }}
        </div>

      </div>
    </div>

    <div class="text-center mt-3">
      <a href="{{ site.url }}">
        {{ __( 'Přejít zpět na partneri.shoptet.cz', 'shp-partneri' ) }}
      </a>
    </div>

  </div>
{% endblock %}