<div class="container py-5 mb-4">

  <div class="row">
    <div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
      {% include 'user/sidebar.twig' with {class: 'user-sidebar-border'} %}
    </div>
    <div class="col-12 col-md-8 col-lg-9">

      <div class="mb-4">

        <div class="mb-3">
          <h1 class="h2 mb-0">
            {{ title }}
          </h1>
        </div>
        {# 
        {% if description %}
          <div>
            {{ description }}
          </div>
        {% endif %}
        #}

        {% if terms is not empty %}
          <div class="mt-4">
            {% include 'course/categories.twig' %}
          </div>
        {% endif %}

      </div>

      {% if posts is not empty %}

        <div class="row small-gutters">
          {% for post in posts %}
            <div class="col-12 col-md-6 col-xl-4">
              {% include 'course/thumbnail.twig' %}
            </div>
          {% endfor %}
        </div>

        <div class="text-muted text-right mt-3">
          {{ __( 'Celkem %d z %d', 'shp-partneri' )|format( posts_count, posts_found ) }}
        </div>

			  {% include 'pagination.twig' with {class:'mt-3'} %}

      {% else %}

        <div class="border-top pt-5">

          <p class="h3 mb-2">
            {{ __( 'Nemůžeme najít žádné webináře s těmito požadavky', 'shp-partneri' ) }}
          </p>
          <p>
            {{ __( 'Zkuste prosím snížit vaše požadavky pomocí filtrů.', 'shp-partneri' ) }}
          </p>

        </div>

      {% endif %}

    </div>
  </div>

</div>