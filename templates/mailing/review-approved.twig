{% extends "templates/mailing/base.twig" %}

{% block content %}

  <table border="0" cellspacing="0" cellpadding="0" style="padding-bottom:8px;">
    <tr>
      <td style="padding-bottom:13px;">{{ __( 'Gratulujeme!', 'shp-partneri' ) }}</td>
    </tr>
    <tr>
      <td style="padding-bottom:13px;">{{ __( 'Váš klient si udělal čas a dostali jste od něj nové hodnocení.<br>Přečíst a reagovat na něj můžete přímo v detailu <a href="%s" target="_blank" style="%s">svého medailonku</a>.', 'shp-partneri' )|format(post.link~'#comment-'~comment.ID, 'color:#f5756c;text-decoration:none;') }}</td>
    </tr>
  </table>

  {% if comment.rating %}
	  {% include 'templates/mailing/rating-stars.twig' with {rating:comment.rating} %}
  {% endif %}

	{% include 'templates/mailing/review.twig' with {content:__( 'Kdo hodnocení přidal:', 'shp-partneri' )} %}    

	{% include 'templates/mailing/cta.twig' with {url:post.link~'#comment-'~comment.ID,text:__( 'Přečíst hodnocení', 'shp-partneri' )} %}  

{% endblock %}