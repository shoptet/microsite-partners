<div class="list-group-profile-item py-3">

  <div class="row">

    {% if post.terms is not empty %}
      <div class="col-2 p-0">
        <svg
          class="w-100 h-auto"
          data-src="{{ post.terms.0.get_field('image').sizes.medium }}"
        ></svg>
      </div>
    {% endif %}

    <div class="col-10 align-self-center">

      <h1 class="request-title mb-1" itemprop="name">{{ post.title }}</h1>

      {% if post.terms is not empty %}
        <ul class="list-inline mb-0">
          {% for term in post.terms %}
            <li class="list-inline-item"><a href="{{ term.link }}">{{ term.name }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}

    </div>

  </div>
  
</div>
