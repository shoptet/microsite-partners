<form class="form-inline">
  <div class="form-group mb-0">
    <label for="orderSelect">
      {{ __( 'Se≈ôadit podle:', 'shp-partneri' ) }}
    </label>
    <select class="form-control custom-select ml-sm-2 mr-sm-4" id="orderSelect" name="orderby" onchange="this.form.submit()">
      {% for key, title in  order_choices %}
        <option
          value="{{ key }}"
          {% if ( selected_orderby == key ) %}
            selected
