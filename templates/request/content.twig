<div class="list-group-profile-item">

  <meta itemprop="description" content="{{ post.content|striptags }}">

  {{ post.content }}

</div>
<div class="list-group-profile-item">

  {% if post.author_name %}
    <div class="row mb-3 mb-sm-1">
      <div class="col-sm-3 text-muted">
        {{ __( 'Zadavatel', 'shp-partneri' ) }}
      </div>
      <div class="col-sm-8">
        {{ post.author_name|remove_lastname }}
      </div>
    </div>
  {% endif %}

  {% if post.url %}
    <meta itemprop="url" content="{{ post.url|ensure_protocol }}">
    <div class="row mb-3 mb-sm-1">
      <div class="col-sm-3 text-muted">
        {{ __( 'URL projektu', 'shp-partneri' ) }}
      </div>
      <div class="col-sm-8">
        <a href="{{ post.url|ensure_protocol }}" target="_blank">
          {{ post.url|display_url }}
        </a>
        {% if post.is_shoptet %}
          <span class="text-muted small">({{ __( 'Provozováno na Shoptet', 'shp-partneri' ) }})</span>
        {% endif %}
      </div>
    </div>
  {% endif %}

  {% if post.post_date %}
    <div class="row mb-3 mb-sm-1">
      <div class="col-sm-3 text-muted">
        {{ __( 'Zveřejnění', 'shp-partneri' ) }}
      </div>
      <div class="col-sm-8">
        <time datetime="{{ post.post_date|date('c') }}">{{ post.post_date|date_i18n }}</time>
      </div>
    </div>
  {% endif %}
  
  {% if post.status %}
    <div class="row">
      <div class="col-sm-3 text-muted">
        {{ __( 'Stav poptávky', 'shp-partneri' ) }}
      </div>
      <div class="col-sm-8">
        {{ post.status|request_state }}
      </div>
    </div>
  {% endif %}

</div>