<div class="review {{ is_root_review ? 'border-top py-4' : 'border-radius bg-gray p-4 mb-4' }}" id="comment-{{comment.ID}}">

  {% if is_root_review %}
    <div class="mb-3">
      {% include 'review-rating-stars.twig' with {rating: comment.rating} %}
    </div>
  {% endif %}

	<div class="d-md-flex">

    <div class="mb-3 mb-md-0">
      <img
        class="border-radius"
        src="
          {% if post.get_field('emailAddress') == comment.comment_author_email %}
            {{ post.thumbnail.src|resize(150, 150) }}
          {% else %}
            {{ comment.avatar(150, "placeholder.jpg"|static_assets) }}
          {% endif %}
        "
        width="75"
        height="75"
        alt="{{ comment.comment_author }}"
      >
    </div>
    
    <div class="flex-grow-1 ml-md-4">
      <div class="comment-body">
        {{ comment.comment_content|wpautop }}
      </div>
      <div class="d-md-flex justify-content-between">
        {% spaceless %}
          <ul class="d-inline-block mb-md-0 list-inline list-inline-comma">
            <li class="list-inline-item"><strong>{{ comment.comment_author }}{% if post.get_field('emailAddress') == comment.comment_author_email %} ({{ __('Shoptet partner', 'wavee-theme') }}){% endif %}</strong></li>
            {% if comment.comment_author_url %}
              <li class="list-inline-item">
                <a href="{{ comment.comment_author_url }}" target="_blank" rel="nofollow">{{ comment.comment_author_url|display_url }}</a>
              </li>
            {% endif %}
            <li class="list-inline-item">
              <a class="text-dark" href="#comment-{{comment.ID}}"><time datetime="{{ comment.time|date('c') }}">{{ comment.date }}, {{ comment.time }}</time></a>	
            </li>
          </ul>
        {% endspaceless %}
        {% if is_root_review %}
          <div class="mt-3 ml-md-3">
            <a class="btn btn-primary btn-sm" href="#commentForm{{ comment.ID }}" data-toggle="collapse" aria-expanded="false" aria-controls="commentForm{{ comment.ID }}">
              {{ __('Reagovat', 'wavee-theme') }}
            </a>
          </div>
        {% endif %}
      </div>

    </div>

	</div>

</div>
