{% extends "base.twig" %}

{% block content %}

	{% if locale == 'hu_HU' %}
		<div class="hero-alt">
			<div class="container">
				<div class="row">
					<div class="col-12 col-md-6 col-lg-7 align-self-center">
						<div class="hero-alt-body">
							<h1>Potřebujete pomoct s e‑shopom?</h1>
							<p>Lorem ipsum dolor sit amet, <strong>32 consectetuer</strong> adipiscing elit. Sed ac dolor sit amet purus malesuada congue. Vestibulum fermentum tortor id mi.</p>
							<a href="/{{ __( 'profesionalove', 'shp-partneri' ) }}/" class="btn btn-primary btn-lg mt-3">Zobrazit experty</a>
						</div>
					</div>
					<div class="col-12 col-md-6 col-lg-5">
						<div class="hero-alt-img">
							<img src="https://images.unsplash.com/photo-1668741229182-cf33eaad5798?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1174&q=80" alt="">
							<div class="hero-alt-img-desc"><a href="#">Daniel Špaček, <em>Fotograf</em></a></div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="bg-blue-light py-5">
			<div class="container">
				<div class="text-center text-md-left">
					<div class="row align-items-center justify-content-between">
						<div class="col-12 col-md-8 mb-4 mb-md-0">
							<p class="fs-170 fs-md-250 mb-0">Naši partneři se o vás vždy profesionálně postarají.</p>
						</div>
						<div class="col-12 col-md-4">
							<div class="text-center">
								<img
									class="d-inline-block rounded-circle mb-3"
									src="https://partneri.shoptet.sk/wp-content/uploads/2022/04/polgari_stefan-300x300.jpg"
									alt=""
									width="100"
									height="100"
								/>
								<div class="lh-125"><strong>Štefan Polgári</strong></div>
								<div class="lh-125">Co-founder, <a href="https://www.dognet.sk/" target="_blank">dognet.sk</a></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% else %}
		<div class="hero">
			<div class="container">
				<div class="hero-bg-img">
					<p class="hero-lead h2 mb-0">
						{{ hero_text }}
					</p>
				</div>
			</div>
		</div>
	{% endif %}

	{% if show_category_professionals %}
		<div class="row-profile-type row-profile-type-professionals">
			<div class="container">

				<div class="row-profile-type-header">
					<h2 class="row-profile-type-title"><a href="/{{ __( 'profesionalove', 'shp-partneri' ) }}/">{{ __( 'Profesionálové', 'shp-partneri' ) }}</a></h2>

					{% if options.perexProfessional %}
						<div class="row-profile-type-perex">
							{{ options.perexProfessional }}
						</div>
					{% endif %}
				</div>

				{% include 'category/list.twig' with {'terms': category_professionals} %}

			</div>
		</div>
	{% endif %}

	{% if not options.hideBadges %}
		<div class="container">
			<h2 class="mb-4">{{ options.themeBadgesTitle }}</h2>
			{% include 'row-badges.twig' %}
		</div>
	{% endif %}

	{% if recent_request_posts is not empty %}
		<div class="row-profile-type row-profile-type-requests">
			<div class="container">

				<div class="row-profile-type-header">

					<h2 class="row-profile-type-title"><a href="{{ link.request.archive }}">{{ __( 'Nové poptávky', 'shp-partneri' ) }}</a></h2>

					<p class="mb-5">
						{{ __( 'Víte, co potřebujete, ale nechce se vám hledat konkrétního Shoptet Partnera? Zadejte si poptávku zdarma a jen čekejte na první nabídky.', 'shp-partneri' ) }}
					</p>

				</div>

				{% for post in recent_request_posts %}
					{% include 'request/thumbnail.twig' with {size:"lg"} %}
				{% endfor %}

				<ul class="list-inline mt-3 text-center text-sm-right">
					<li class="list-inline-item mt-2">
						<a href="{{ link.request.archive }}" class="btn btn-link">
							{{ __( 'Prohlédnout poptávky', 'shp-partneri' ) }}
						</a>
					</li>
					<li class="list-inline-item mt-2">
						<a href="/nova-poptavka/" class="btn btn-primary">
							{{ __( 'Vložit vlastní poptávku', 'shp-partneri' ) }}
						</a>
					</li>
				</ul>

			</div>

		</div>
	{% endif %}

	{% if show_category_plugins %}
		<div class="row-profile-type row-profile-type-plugins">
			<div class="container">

				<div class="row-profile-type-header">
					<h2 class="row-profile-type-title"><a href="napojeni/">Napojení</a></h2>

					{% if options.perexPlugin %}
						<div class="row-profile-type-perex">
							{{ options.perexPlugin }}
						</div>
					{% endif %}
				</div>

				{% include 'category/list.twig' with {'terms': category_plugins} %}

			</div>
		</div>
	{% endif %}

	{% if show_category_tools %}
		<div class="row-profile-type row-profile-type-tools">
			<div class="container">

				<div class="row-profile-type-header">
					<h2 class="row-profile-type-title"><a href="nastroje/">Nástroje</a></h2>

					{% if options.perexTool %}
						<div class="row-profile-type-perex">
							{{ options.perexTool }}
						</div>
					{% endif %}
				</div>

				{% include 'category/list.twig' with {'terms': category_tools} %}

			</div>
		</div>
	{% endif %}

	<div class="row-profile-type">
			<div class="container">
				<h2 class="mb-4">{{ __( 'Nejnovější Shoptet Partneři', 'shp-partneri' ) }}</h2>
				{% include 'profile/list.twig' with {'posts': newest_posts, 'hide_cta': true} %}
			</div>
	</div>

	{% include 'row-reference.twig' %}

	{% include 'row-contact.twig' %} 

{% endblock %}
