{% extends "base.twig" %}

{% block head %}
  {{ parent() }}
  {{ function('acf_form_head') }}
{% endblock %}

{% set hide_header_action = true %}

{% block content %}

	<div class="container py-5 mb-4">

		<div class="row">
			<div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
				{% include 'user/sidebar.twig' with {class: 'user-sidebar-border'} %}
			</div>
			<div class="col-12 col-md-8 col-lg-9">

				<div class="mb-4">

					<div class="mb-4">
						<h1 class="h2">
							{{ title }}
						</h1>
						<p>Zde máte možnost upravit svůj veřejný profil. Vaše změny budou před zveřejněním schváleny partner managerem, který vás má na starosti.</p>
					</div>

					<ul class="nav nav-tabs mb-4">
						{% for name, title in tabs %}
							<li class="nav-item">
								<a href="?tab={{ name }}" class="nav-link {% if current_tab == name %}active{% endif %}">{{ title }}</a>
							</li>
						{% endfor %}
					</ul>

					<div class="user-acf">
						{{ function('acf_form', acf_form_args) }}
					</div>

				</div>

			</div>
		</div>

	</div>

{% endblock %}
