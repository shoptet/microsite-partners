<div class="container py-5 mb-4">

  <div class="row">
    {% if terms is not empty %}
      <div class="col-12 col-md-4 col-lg-3">
        {% include 'webinar/categories.twig' %}
      </div>
    {% endif %}
    <div class="col-12 col-md-8 col-lg-9">

      <div class="mb-4">

        <div class="mb-3">
          <h1 class="h2 mb-3 mb-md-0">
            {{ title }}
          </h1>
        </div>

        <div class="mb-3">
          {% include 'breadcrumb.twig' %}
        </div>

        {% if description %}
          <div class="mb-3">
            {{ description }}
          </div>
        {% endif %}

      </div>

      {% if posts is not empty %}

        <div class="row small-gutters">
          {% for post in posts %}
            <div class="col-12 col-md-6 col-xl-4">
              {% include 'webinar/thumbnail.twig' %}
            </div>
          {% endfor %}
        </div>

        <div class="text-muted text-right mt-3">
          {{ __( 'Celkem %d z %d', 'shp-partneri' )|format( posts_count, posts_found ) }}
        </div>

			  {% include 'pagination.twig' with {class:'mt-3'} %}

      {% else %}

        <div class="border-top pt-5">

          <p class="h3 mb-2">
            {{ __( 'Nemůžeme najít žádné poptávky s těmito požadavky', 'shp-partneri' ) }}
          </p>
          <p>
            {{ __( 'Zkuste prosím snížit vaše požadavky pomocí filtrů.', 'shp-partneri' ) }}
          </p>

        </div>

      {% endif %}

    </div>
  </div>

</div>