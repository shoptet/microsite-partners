<div class="filter mb-4 mb-md-0">
  <button
    class="btn btn-primary d-md-none"
    type="button"
    data-toggle="collapse"
    href="#filtersCollapse"
    role="button"
    aria-expanded="false"
    aria-controls="filtersCollapse"
  >
    {{ __( 'Zobrazit filtry', 'shp-partneri' ) }}
  </button>

  <div class="collapse d-md-block" id="filtersCollapse">

    <div class="mt-3 mt-md-0">
      <p class="h5 font-weight-bold mt-0 mb-2">
        {{ __( 'Kategorie webinářů', 'shp-partneri' ) }}
      </p>

      <ul class="list-unstyled mb-0">
        <li>
          <a class="filter-link" href="{{ link.webinar.archive|keep_query_string }}">
            {{ __( 'Všechny webináře', 'shp-partneri' ) }}
            <span class="text-semilight">({{ filterby == 'active' ? webinar_posts_count.publish : webinar_posts_count.publish + webinar_posts_count.expired }})</span>
          </a>
        </li>
        {% for t in terms %}
          <li>
            <a class="filter-link {% if t.id == term.id %}filter-link-active{% endif %}" href="{{ t.link|keep_query_string }}">
              {{ t.name }}
              <span class="text-semilight">({{ t.count }})</span>
            </a>
            {% if t.children %}
              <ul class="list-tree">
                {% for t in t.children %}
                  <li>
                    <a class="filter-link {% if t.id == term.id %}filter-link-active{% endif %}" href="{{ t.link|keep_query_string }}">
                      {{ t.name }}
                      <span class="text-semilight">({{ t.count }})</span>
                    </a>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}
          </li>
        {% endfor %}
      </ul>

    </div>
  </div>
</div>