{% extends "base.twig" %}

{% block head %}
  {{ parent() }}
  {{ function('acf_form_head') }}
{% endblock %}

{% block header %}
  <div class="container text-center py-4">
    <img
      class="img-fluid"
      src="{{ "shoptet-partneri-logo.svg"|static_assets }}"
      alt="{{ __( 'Shoptet Partneři', 'shp-partneri' ) }}"
      width="280"
    >
  </div>
{% endblock %}

{% block content %}
  <div class="bg-blue-light request-form">
    <div class="container py-5">

      <div class="row">
        <div class="col-lg-1 col-xl-2"></div>
        <div class="col-lg-10 col-xl-8">

          <div class="list-group-profile">
            <div class="list-group-profile-item">

              <h1 class="h2 mb-4">
                {{ __( 'Nová poptávka', 'shp-partneri' ) }}
              </h1>

              {% if submited %}
              Odesláno!
              {% endif %}

              <form
                id="{{ acf_form_args.id }}"
                class="acf-form"
                action=""
                method="post"
                autocomplete="off"
              >

                {{ function('acf_form', acf_form_args.top) }}

                {{ function('acf_form', acf_form_args.bottom) }}

                <div>
                  <input type="checkbox" id="defaultCheck1" required>
                  <label class="required" for="defaultCheck1">
                    {{
                      __(
                        'Souhlasím se <a href="%s" target="_blank">zpracováním osobních údajů</a>',
                        'shp-obchodiste'
                      )|format('https://www.google.com/')
                    }}
                    <span class="acf-required">*</span>
                  </label>
                </div>

                <div class="mt-3">
                  <button
                    type="submit"
                    class="btn btn-primary btn-lg"
                  >
                    {{ __( 'Odeslat poptávku', 'shp-obchodiste' ) }}
                  </button>
                </div>

              </form>

            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
{% endblock %}

{% block footer %}
  <div class="container text-center py-5">
    <img
      class="img-fluid"
      src="{{ "shoptet-logo.svg"|static_assets }}"
      alt="{{ __( 'Shoptet', 'shp-partneri' ) }}"
      width="150"
    >
  </div>
{% endblock %}