{% extends "base.twig" %}

{% block content %}
    <div class="row-page-content">
    	<div class="container">
        	<div class="content-wrapper">
        		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
        			<section class="article-content">
        				<h1 class="article-h1">{{post.title}}</h1>
        				<div class="article-body">
        					{{post.content}}
        				</div>
        			</section>
        		</article>
        	</div><!-- /content-wrapper -->
    	</div><!-- /container -->
    </div><!-- /row -->
{% endblock %}